# ===========================================
# Data Center News Chatbot - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# ===========================================

# -----------------
# DATABASE
# -----------------
# SQLite (default - no setup required):
DATABASE_URL=sqlite:///./datacenter_news.db

# PostgreSQL (for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/datacenter_news

# -----------------
# AI PROVIDER (for chat responses)
# -----------------
# Options: groq (free), together (free), openai (paid)
AI_PROVIDER=groq

# Groq API (FREE - recommended for getting started)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Together AI (FREE alternative)
# Get your key at: https://api.together.xyz/
# TOGETHER_API_KEY=your_together_api_key_here

# OpenAI (PAID - better quality but costs money)
# Get your key at: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_api_key_here

# -----------------
# EMBEDDING PROVIDER
# -----------------
# Options: sentence-transformers (free, local), openai (paid)
# sentence-transformers runs locally and is completely free
EMBEDDING_PROVIDER=sentence-transformers

# -----------------
# VECTOR DATABASE
# -----------------
# Path for ChromaDB storage
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_DB_PATH=./chroma_db

# -----------------
# REDDIT API (optional)
# -----------------
# Create an app at: https://www.reddit.com/prefs/apps
# Required for Reddit scraping
# REDDIT_CLIENT_ID=your_reddit_client_id
# REDDIT_CLIENT_SECRET=your_reddit_client_secret
# REDDIT_USER_AGENT=DataCenterNewsBot/2.0 (by /u/yourusername)

# -----------------
# TWITTER/X API (optional)
# -----------------
# Get credentials at: https://developer.twitter.com/
# Required for Twitter scraping
# TWITTER_BEARER_TOKEN=your_twitter_bearer_token
# TWITTER_API_KEY=your_api_key
# TWITTER_API_SECRET=your_api_secret
# TWITTER_ACCESS_TOKEN=your_access_token
# TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret

# -----------------
# COST LIMITS (for paid APIs)
# -----------------
# Set spending limits to prevent unexpected charges
DAILY_COST_LIMIT=1.00
MONTHLY_COST_LIMIT=10.00

# -----------------
# SCRAPING SETTINGS
# -----------------
# How often to scrape (in minutes)
SCRAPE_INTERVAL_MINUTES=30

# Minimum relevance score for articles (0.0 - 1.0)
# Higher = stricter filtering, fewer but more relevant articles
RELEVANCE_THRESHOLD=0.2

# -----------------
# LOGGING
# -----------------
# Options: DEBUG (dev), INFO (prod)
LOG_LEVEL=INFO

# -----------------
# STREAMLIT (if using Streamlit UI)
# -----------------
# URL of the FastAPI backend
API_URL=http://localhost:8000
